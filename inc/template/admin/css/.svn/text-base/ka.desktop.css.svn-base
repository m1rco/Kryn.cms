.ka-desktop-icon {
    position: absolute;
    width: 90px;
    height: 55px;
    background-repeat: no-repeat;
    background-position: center center;
    margin: 15px;
    margin-bottom: 30px;
    text-align: center;
}

.ka-desktop-icon-title {
    position: absolute;
    top: 50px;
    width: 100%;
    color: gray;
    padding: 2px;
    color: white;
    text-shadow: 0px 0px 2px black;
    font-size: 11px;
    cursor: default;
    font-weight: bold;
}

.ka-desktop-icon-active .ka-desktop-icon-title {
    background-color: #aaa;
    -moz-border-radius: 5px;
}

.ka-desktop-context {
    position: absolute;
    padding: 2px;
    border: 1px solid #ccc;
    border-right: 1px solid #aaa;
    border-bottom: 1px solid #aaa;
    background-color: #f0f0f0;
    -moz-border-radius: 5px;
    box-shadow: 1px 1px 2px #ccc;
    -moz-box-shadow: 1px 1px 2px #ccc;
}

.ka-desktop-context a,
.ka-desktop-context a:link {
    display: block;
    padding: 3px 40px 3px 15px;
}

.ka-desktop-context a:hover {
    background-color: #ddd;
    cursor: default;
}
