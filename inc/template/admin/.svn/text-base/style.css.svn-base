html, body {
    font-family: Arial,sans;
    font-size: 11px;
/*    background-color: #f4f4f4; */
    margin: 0px;
    padding: 0px;
}

html {
    height: 100%;
    overflow: hidden;
/*    background-color: white;*/
}

a, a:visited, a:active {
    color: #434343;
}
a:hover {
    color: gray;
}


/*
    DIVs
*/

div.middleLeft{
    padding-top: 4px;
    padding-right: 5px;
    left: 0px;
    position: absolute;
    bottom: 0px;
    top: 0px;
    width: 130px;
    background-color: #e4eef5;
    z-index: 1000;
}

iframe.content{
    width: 100%;
    position: absolute;
    top: 0px;
    bottom: 0px;
    height: 100%;
}

div.content {
    position: absolute;
    right: 0px;
    left: 0px;
    bottom: 0px;
    top: 0px;
}

div.middle {
    position: absolute;
    top: 47px;
    left: 0px;
    right: 0px;
    bottom: 26px;
    text-align: left;
/*    background-color: #f9f9f9;*/
/*    background-color: white;*/
    border-bottom: 1px solid #d4d0c8;
}

div.header {
    position: absolute;
    top: 0px;
    left: 6px;
    right: 6px;
    text-align: left;
    line-height: 13px;
    height: 42px;
    padding-top: 3px;
    background-color: #d7d7d7;
    background-repeat: repeat-x;
    background-image: url(./images/menu.png);
    border-bottom: 2px solid gray;
    border-left: 1px solid silver;
    border-right: 1px solid silver;
    -moz-border-radius-bottomleft: 8px;
    -moz-border-radius-bottomright: 8px
}

div.windowList {
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    height: 25px;
    background-color: #d5d2cd;
    border-top: 1px solid white;
}


div.footer {
    position: absolute;
    bottom: 0px;
    left: 0px;
    right: 0px;
    text-align: right;
    height: 19px;
    color: silver;

    padding-right: 5px;
    background-color: #f4f4f4;
    border-top: 1px solid silver;
    font-size: 10px;
}

div.footer .clipboard {
    position: absolute;
    left: 5px;
    top: 1px;
    color: gray;
}

div.headLeft {
    float: left;
    margin-left : 10px;
    width: 500px;
    font-weight: bold;
    color: #0271b0;
    font-size: 12px;
}

div.headRight{
    position: absolute;
    right: 0px;
    top: 0px;
    color: #777;
    font-size: 10px;
    line-height: 12px;
    text-align: right;
    border-bottom: 1px solid silver;
    border-left: 1px solid silver;
    padding: 0px 0px 3px 3px;
    background-color: #fafafa;
    -moz-border-radius-bottomleft: 5px;
}

div.mainlinks {
    padding-left: 10px;
    margin-top: 4px;
    padding-bottom: 4px;
}

div.mainlinks a.active,
div.moduleLinks a.active,
div.mainlinks a.active:link {
    background-color: #e8f3f9;
    background-color: #f2f2f2;
    color: #555;
}

div.mainlinks > a,
div.mainlinks > a:link {
    float: left;
    padding: 2px 9px 3px 9px;
    line-height: 13px;
    border: 1px solid #bbb;
    border-right: 0px;
    background-color: #d4eaf6;
    font-weight: bold;
    color: black;
    text-decoration: none;
    position: relative;
    z-index: 16000;
    cursor: pointer;
    /*
    -moz-border-radius: 5px;*/
}

div.moduleLinks a {
    border: 0px;
}

div.mainlinks a.first,
div.mainlinks a.first:link {
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-bottomleft: 5px;
}

div.mainlinks a.last,
div.mainlinks a.last:link {
    border: 1px solid #bbb;
    -moz-border-radius-topright: 5px;
    -moz-border-radius-bottomright: 5px;
    margin-right: 15px;
}

div.mainlinks a:hover {
    background-color: #0271b0;
    background-color: #eee;
}

div.buttons {
    float: right;
    margin-top: 3px;
    margin-left: 3px;
    margin-right: 3px;
    border: 1px solid silver;
    -moz-border-radius: 3px;
    background-color: #d4eaf6;
}

div.headRight span {
    margin-top: 5px;
    padding: 2px 0 4px 0;
    font-size: 12px;
    text-indent: 19px;
    position: relative;
    background-image: url('images/icons/user.png');
    background-repeat: no-repeat;
}

a.miniButton {
    border-right: 1px solid #ddd;
    text-decoration: none;
    padding: 3px 7px 3px 7px;
    display: block;
    float: right;
}

a.miniButton:hover {
    background-color: #aaa;
    color: white;
}

div.mainlinks div.del {
    float: left;
    width: 20px;
    margin-right: 3px;
    text-align: center;
    color: silver;
}

div.subMenu a {
    display: block;
    padding: 2px 5px 2px 10px;
    text-decoration: none;
    background-color: #d4eaf6;
}

div.subMenu a:hover {
    background-color: #0271b0;
    background-color: #eee;
}

div.moduleLinks {
    display: none;
    padding: 0px;
    padding-top: 4px;
}

div.moduleOpen {
    position: absolute;
    bottom: 2px;
    right: 5px;
    font-size: 10px;
    color: gray;
}

/*
    NAVIGATION
*/
a.naviBlockHead, a.naviBlockHead:link, .naviBlockHead {
    display: block;
    padding: 3px 0px 3px 3px;
    margin: 0px;
    background-color: #0271b0;
    text-decoration: none;
    color: white;
}

a.naviBlockHead:hover {
    display: block;
    background-color: white;
    color: #0271b0;
    text-decoration: none;
}

div.naviBlock {
    overflow:hidden;
    margin-left: 5px;
    height: 20px;
}

div.naviItem {
    margin: 3px;
}


div.debug {
    white-space: pre;
    position: absolute;
    left: -1px;
    padding: 2px;
    opacity: 0.7;
    padding-left: 4px;
    bottom: 19px;
    min-width: 250px;
    border: 1px solid #bbb;
    background-color: #f9f9f9;
}
