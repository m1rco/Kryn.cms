html, body {
    padding: 0px;
    margin: 0px;	
}

body {
    background-color: #9f7d4b;
    text-align: center;
    font-family: Verdana, Sans;
    line-height: 160%;
    font-size: 12px;
}

img {
    border: 0px;	
}

form {
    padding: 0px;	
}

h1 {
    font-size: 22px;
    line-height: 24px;	
}


h2 {
    font-size: 17px;
    line-height: 19px;  
}

h1, h2 {
    color: #91a81a;	
}


a,
a:link {
    color: #91a81a;
}

input.text, textarea {
    background-color: white;
    border: 1px solid #cecece;
    padding: 4px;	
}

.content-main .contentElement,
.content-main .contentElementUnderline {
	padding-bottom: 10px;
	margin-bottom: 10px;
}


.contentElementUnderline {
    border-bottom: 1px solid #e5e5e5;	
}

.header {
    height: 254px;
    background-color: #4d3b25;
    background-image: url(images/header-bg.jpg);
    background-position: center top;
    background-repeat: no-repeat;
}

.wrapper {
    margin: auto;
    text-align: left;
    width: 943px;
    position: relative;
}

.header-top {
    width: 943px;
    padding-top: 14px;
    height: 37px;
    padding-left: 13px;
}


.header-top a,
.header-top a:link {
	text-decoration: none;
	color: #8ea519;
	margin: 0px 11px;
	font-size: 12px;
	padding: 7px;
	text-transform: uppercase;
	font-weight: bold;
}

.header-top a.active,
.header-top a:hover,
.header-top a.active:link {
    background-color: #8ea519;
    color: white;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
}

.header-logo a,
.header-logo a:link {
	text-decoration: none;	
}

.header-logo {
    position: relative;
    left: 43px;
    top: 34px;	
}

.header-logo-title {
    color: white;
    font-size: 43px;
    position: relative;
    top: 28px;
    left: 10px;
}

.header-logo-slogan {
    color: #927347;
    position: relative;
    top: 32px;
    left: 10px;
    font-size: 18px;
}
	
.header-subnavi {
    position: absolute;
    top: 215px;
    left: 10px;
    color: white;
}

.header-subnavi a,
.header-subnavi a:link {
    color: white;
    text-decoration: none;
    padding: 0px 9px;
}

.header-subnavi a.active,
.header-subnavi a:hover,
.header-subnavi a.active:link {
    color: #91a81a;
}


.header-search {
    position: absolute;
    top: 214px;
    left: 700px;	
}


.header-search input {
    border: 0px;
    background-color: white;
    padding: 5px;	
}


.header-search input.submit {
    background-color: #2c2215;
    color: white;   
}



.content-main {
    width: 700px;
    position: relative;
    left: -5px;
    background-color: white;
    border: 5px solid #78613f;
    border-top: 0px;
}

.content-main-padding {
    padding: 25px 30px 43px 30px;
}


.content-sidebar {
    border-bottom: 5px solid #78613f;
    border-right: 5px solid #78613f;
    position: relative;
    right: 5px;
    color: #444;
    width: 237px;
    background-color: #a5ad79;
}

.content-sidebar a,
.content-sidebar a:link {
	color: #333;
}

.content-sidebar h2 {
    background-color: #889257;
    padding: 16px 21px;
    color: white;
    font-size: 14px;
    line-height: 14px;
    margin: 0px;
}

.publicationCategoryList a,
.publicationCategoryList a:link {
    padding: 5px 14px;
    text-decoration: none;
    font-size: 11px;
    background-color: #b1b88a;
    color: black;
    margin-bottom: 3px;
    display: block;
}

.publicationCategoryList a.active,
.publicationCategoryList a.active:link, 
.publicationCategoryList a:hover {
    padding: 4px 13px;
	border: 1px solid #6e7948;
    background-color: #808a54;
    color: white;
}

.content-sidebar .contentElementContent {
	border-top: 1px solid #c0c69e;
    padding: 16px 23px;
}

.footer {
    padding-bottom: 15px;	
}

.footer .wrapper {
    color: #9f7d4b;	
    text-align: left;
}

.footer a,
.footer a:link {
    color: #bbb;
}

.footer-box {
    background-color: #78603e;
    position: relative;
    width: 710px;
    left: -5px;
}

.footer-box-padding {
    padding: 20px 30px; 
}
